<div class="author">
    <h1 class="author__heading">Hi! Im Waddah.</h1>
    <p class="author__body">CS student and aspiring software engineer.</p>
</div>

<img src="img/car.jpg" alt="8-bit cat" class="hero-img" width="981" height="528"></img>

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
         
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>

        <% }) %>
       
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; view older posts</a>
    <% } %>
</section>